<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>cz.metacentrum</groupId>
    <artifactId>accounting-parent</artifactId>
    <packaging>pom</packaging>

    <!--
    Use "mvn versions:set -DnewVersion=3.9-SNAPSHOT; mvn versions:commit" to change version in all modules
     -->
    <version>3.7-SNAPSHOT</version>
    <name>MetaCentrum Accounting Parent Project</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <postgresql.version>42.2.2</postgresql.version>
    </properties>

    <!-- defines compatible versions of many libraries -->
    <!-- see http://docs.spring.io/platform/docs/current/reference/htmlsingle/#getting-started-using-spring-io-platform-maven -->
    <parent>
        <groupId>io.spring.platform</groupId>
        <artifactId>platform-bom</artifactId>
        <version>Cairo-RELEASE</version>
        <relativePath/>
    </parent>

    <!-- specifies versions not defined by the Spring platform-bom -->
    <dependencyManagement>
        <dependencies>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>cloud</module><!-- API for MetaCentrum OpenNebula State -->
        <module>perun_machines</module><!-- API for reading JSON data about physical machines from Perun -->
        <module>pbsmon</module><!-- PBSMon - web app showing the state of MetaCentrum -->
        <module>metaacct</module><!-- Accounting server for MetaCentrum -->
        <module>metaacct_cmd</module><!-- Command Line Tools for MetaCentrum Accounting -->
        <module>cerit-stats</module><!-- Availability a Reliability statistics for CERIT-SC -->
        <module>nebula-pbs</module><!-- Import tool for correction for Torque machines in CERIT-SC's OpenNebula -->
    </modules>
</project>
